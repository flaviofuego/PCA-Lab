# Configuración del Proyecto PCA Lab

# Parámetros de generación de datos
N_SAMPLES=500
N_FEATURES=10
DATA_TYPE=classification  # o 'blobs'
RANDOM_STATE=42

# Parámetros de PCA
K_COMPONENTS=2  # Número de componentes principales a extraer

# Rutas
DATA_DIR=data
REPORT_DIR=report
SRC_DIR=src
PYTHON_DIR=python

# Docker
DOCKER_IMAGE=pca-lab-gcc
DOCKER_CONTAINER=pca-lab-container

# Archivos
INPUT_FILE=input_data.csv
OUTPUT_FILE=output_data.csv
LABELS_FILE=labels.csv

# Opciones de compilación C
CC=gcc
CFLAGS=-O2 -Wall -Wextra
LDFLAGS=-lm
